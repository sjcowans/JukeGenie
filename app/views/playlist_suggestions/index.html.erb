<center>
  <div class="flex flex-col mt-0 relative left-0 top-24 px-4 p-3 bg-emerald-600">
    <div class="relative text-1xl font-bold rounded r-lg text-black bg-emerald-600 focus:bg-emerald-700">
      <%= form_with url: populate_dashboard_playlist_path(@playlist[:id]), method: :post, local: true do |f| %>
        <%= hidden_field_tag(:user_id, @user.id) %>
        <%= hidden_field_tag(:playlist_id, @playlist[:id]) %>
        <%= hidden_field_tag(:spotify_id, @playlist[:attributes][:spotify_id]) %>
        <div class="text-white">
          <h1>Enter up to 3 genres:</h1><br>
        </div>
        <%= f.text_field :genre1, list: "genre-list" %>
        <%= f.text_field :genre2, list: "genre-list" %>
        <%= f.text_field :genre3, list: "genre-list" %>
        <datalist id="genre-list">
          <% @genres.each do |genre| %>
            <option value="<%= genre %>">
          <% end %>
        </datalist>
        <div class="text-white">
          <h1>Enter up to 3 artists:</h1><br>
        </div>
        <%= f.text_field :artist1 %>
        <%= f.text_field :artist2 %>
        <%= f.text_field :artist3 %>
        <div class="text-white">
          <h1>Enter up to 3 songs:</h1><br>
        </div>
        <%= f.text_field :song1 %>
        <%= f.text_field :song2 %>
        <%= f.text_field :song3 %>
        <div class="text-white hover:bg-emerald-500">
          <br><%= f.submit 'Add Suggestion!'%>
        </div>
      <% end %>
    </div>
  </div>
</center>